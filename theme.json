{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {"name": "Panolabo Green", "slug": "plb-green", "color": "#316B3F"},
        {"name": "Panolabo Yellow", "slug": "plb-yellow", "color": "#FFC857"},
        {"name": "Panolabo Orange", "slug": "plb-orange", "color": "#FF6B35"},
        {"name": "Panolabo Blue", "slug": "plb-blue", "color": "#2E86AB"},
        {"name": "Dark", "slug": "dark", "color": "#1e1e1e"},
        {"name": "Light", "slug": "light", "color": "#f8f9fa"}
      ],
      "custom": true,
      "customGradient": true,
      "defaultPalette": false
    },
    "typography": {
      "fontSizes": [
        {"slug": "small", "size": "14px", "name": "Small"},
        {"slug": "base", "size": "16px", "name": "Base"},
        {"slug": "lead", "size": "20px", "name": "Lead"},
        {"slug": "large", "size": "24px", "name": "Large"},
        {"slug": "xlarge", "size": "32px", "name": "Extra Large"}
      ],
      "fontFamilies": [
        {
          "fontFamily": "'Hiragino Sans', 'Hiragino Kaku Gothic ProN', 'Yu Gothic Medium', 'Meiryo', -apple-system, BlinkMacSystemFont, sans-serif",
          "slug": "primary",
          "name": "Primary Font"
        }
      ],
      "customFontSize": true,
      "lineHeight": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vw", "vh"],
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "custom": {
      "spacing": {
        "xs": "0.5rem",
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem",
        "xl": "3rem"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--light)",
      "text": "#333333"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--custom--spacing--md)",
      "padding": {
        "top": "0",
        "right": "var(--wp--custom--spacing--md)",
        "bottom": "0",
        "left": "var(--wp--custom--spacing--md)"
      }
    },
    "blocks": {
      "core/heading": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/button": {
        "border": {
          "radius": "4px"
        },
        "color": {
          "background": "var(--wp--preset--color--plb-green)",
          "text": "#ffffff"
        },
        "typography": {
          "fontWeight": "600"
        }
      }
    }
  }
}